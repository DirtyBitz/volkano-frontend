    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.15.0",
    "cookie": "^0.3.1",
    "global": "^4.3.2",
    "js-cookie": "^2.2.0",
    "localforage": "^1.7.1",
    "next": "^5.1.0",
    "next-redux-wrapper": "^1.3.5",
    "node-sass": "^4.9.0",
    "raven-js": "^3.24.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-ga": "^2.5.0",
    "react-modal": "^3.4.4",
    "react-redux": "^5.0.7",
    "react-spinners": "^0.3.2",
    "react-tag-box": "^1.6.0",
    "react-youtube": "^7.6.0",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-form": "^7.2.3",
    "redux-persist": "^5.9.1",
    "redux-thunk": "^2.2.0",
    "sleep-promise": "^6.0.0",
    "semantic-ui-react": "^0.80.0",
    "styled-jsx-plugin-sass": "^0.2.3",
    "wait-on": "^2.1.0"
  },
  "devDependencies": {
    "@types/cookie": "^0.3.1",
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
