    "@types/react-redux": "^6.0.0",
    "@types/redux-form": "^7.0.14",
    "@types/redux-mock-store": "^0.0.13",
    "@types/styled-jsx": "^2.2.3",
    "cypress": "2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.4.2",
    "prettier": "^1.12.1",
    "react-addons-test-utils": "^15.6.2",
    "redux-mock-store": "^1.5.1",
